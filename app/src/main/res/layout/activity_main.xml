<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:alpha="0.3"
        android:id="@+id/main_activity_backdrop"
        android:background="@drawable/start_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:alpha="0.8"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_huge"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/main_activity_join_in"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:alpha="0.8"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_huge"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/main_activity_already_registered"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/main_activity_backdrop"
        android:text="Click me!"
        android:layout_marginTop="45dp"
        android:textAllCaps="false"
        android:textSize="32sp"
        android:id="@+id/main_activity_btn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_activity_btn"
        android:id="@+id/main_activity_text_view"/>
</RelativeLayout>
